

@model CreateProductVM


<style>
    .form-group-reverse {
        display: flex;
        flex-direction: column-reverse;
        align-items: flex-start;
    }

    .form-label {
        margin-top: 100px; /* Etiket ile giriş alanı arasındaki boşluk */
    }
</style>



<form method="post" enctype="multipart/form-data" asp-action="Create">


<div class="container">
    <div class="row">
        <div class="col-12">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Photo" class="form-label">Image</label>
                    <input asp-for="Photo" class="form-control">
                    <span asp-validation-for="Photo"></span>

                </div>

                <div class="mb-3">
                    <select asp-for="CategoryId" asp-items="new SelectList(Model.Categories,nameof(Category.Id),nameof(Category.Name))"></select>
                    <span asp-validation-for="CategoryId"></span>
                </div>
        </div>
    </div>
</div>
  
    <button type="submit" class="btn btn-primary">Submit</button>
</form>